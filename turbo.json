{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["FAL_AI_API_KEY", "ENABLE_EXPERIMENTAL_COREPACK", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "ALLOWED_ADDRESSES", "TURSO_DATABASE_URL", "TURSO_AUTH_TOKEN", "NEXT_PUBLIC_ADMIN_WALLET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
